<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/background_login"
        tools:context=".Controller.FaturaActivity">

    <TextView
            android:layout_weight="1"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="0dp"
            android:text="Cadastrar"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="45sp"/>

    <TextView
            android:layout_weight="1"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="Fatura"

            android:textSize="40sp"/>

    <TextView
            android:id="@+id/codigo_fatura"
            android:layout_weight="1"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:text="Digite o código de identificação"
            android:padding="5dp"
            android:background="@color/white"
            android:textSize="18sp"/>

    <TextView
            android:id="@+id/valor_fatura"
            android:layout_weight="1"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            android:text="Digite o valor da fatura"
            android:padding="5dp"
            android:background="@color/white"
            android:textSize="18sp"/>

    <TextView
            android:id="@+id/descricao_fatura"
            android:layout_weight="2"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            android:text="Escreva uma descrição"
            android:padding="5dp"
            android:background="@color/white"
            android:textSize="18sp"/>

    <Button
            android:id="@+id/btn_cadastrar_fatura"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="Cadastrar"
            android:padding="5dp"
            android:layout_weight="1"/>


</LinearLayout>