<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="5"
        android:background="@color/gray"
        android:padding="20dp"
        tools:context=".Controller.UsuarioActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/foto_usuario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

    <TextView
            android:id="@+id/nome_usuario"
            android:text="Nome do Usuario"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="36sp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="left">

        <TextView
                android:id="@+id/lb_email_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Email"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/email_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="email@email.com"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/lb_saldo_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Saldo"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/saldo_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="7000"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/lb_cpf_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="CPF"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/cpf_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="7000000000"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/lb_telefone_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Telefone"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/telefone_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="(00) 00000 - 0000"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/lb_descricao_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Descrição"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/descricao_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="(00) 00000 - 0000"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>