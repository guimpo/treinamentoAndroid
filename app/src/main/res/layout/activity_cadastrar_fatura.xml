<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/background_login"
        tools:context=".Controller.CadastrarFaturaActivity">

    <TextView
            android:layout_weight="1"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="0dp"
            android:text="Cadastrar"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="45sp"/>

    <TextView
            android:layout_weight="1"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="Fatura"
            android:textSize="40sp"/>

    <EditText
            android:id="@+id/codigo_fatura"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:hint="Digite o código de identificação"
            android:background="@color/white"
            android:textSize="18sp"/>

    <EditText
            android:id="@+id/valor_fatura"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:hint="Digite o valor da fatura"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:background="@color/white"
            android:textSize="18sp"/>

    <EditText
            android:id="@+id/descricao_fatura"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:hint="Escreva uma descrição"
            android:padding="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:background="@color/white"
            android:textSize="18sp"/>

    <Button
            android:id="@+id/btn_cadastrar_fatura"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="Cadastrar"
            android:padding="5dp"
            android:layout_weight="1"/>


</LinearLayout>