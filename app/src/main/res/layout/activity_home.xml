<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.HomeActivity"
        android:weightSum="2"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/campos"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:textSize="50sp"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingLeft="15dp">

        <TextView
                android:id="@+id/lbNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/ola_usuario"
                android:textSize="33dp"
                android:textColor="@color/black"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="seja bem-vindo!"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2">

        <LinearLayout
                android:id="@+id/perfil"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="50sp"
                android:orientation="vertical"
                android:layout_weight="0.8"
                android:layout_marginRight="2dp"
                android:background="@color/fundo_perfil">

            <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Meu Perfil"/>


        </LinearLayout>
        <LinearLayout
                android:id="@+id/pessoas"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="50sp"
                android:orientation="vertical"
                android:layout_weight="1.2"
                android:background="@color/fundo_pessoas">

            <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_people"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pessoas"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:weightSum="2">


        <LinearLayout
                android:id="@+id/notificacao"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="50sp"
                android:layout_marginRight="2dp"
                android:orientation="vertical"
                android:layout_weight="1.2"
                android:background="@color/fundo_pessoas">

            <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_notifications"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Notificações"/>


        </LinearLayout>
        <LinearLayout
                android:id="@+id/anotacao"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="50sp"
                android:orientation="vertical"
                android:layout_weight="0.8"
                android:background="@color/fundo_perfil">
            <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_notes"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Minhas Anotações"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>